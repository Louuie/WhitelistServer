doctype html
html(lang='en')
  head
    meta(charset='UTF-8')
    meta(http-equiv='X-UA-Compatible' content='IE-edge')
    meta(name='viewport' content='width-device-width, initial-scale=1.0')
    script(src="https://code.jquery.com/jquery-3.6.0.min.js")
    script(type='text/javascript' src='/hide-loader.js') 
    title=minecraftUsername
    .top(id='top')
      p(id='player-txt') Player
      p(id='status-txt') Status
      img(src=minecraftAvatar id='avatar')
      form
        br
        input(type='text' name='minecraftUsername' id='username' value=minecraftUsername readonly)
        br
        button(type='submit' id='status' value=status)=status
  body
  style
    include ../../styles/main.css
    include ../../styles/user.css